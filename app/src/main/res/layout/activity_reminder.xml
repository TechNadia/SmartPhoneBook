<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/btnReminder"
        android:text="Set Reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="reminder"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



    <Button
        android:id="@+id/btnSave"
        android:text="Save"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="save"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnReminder"
        android:layout_alignEnd="@+id/btnReminder"
        android:layout_alignLeft="@+id/btnReminder"
        android:layout_alignStart="@+id/btnReminder" />


    <EditText
        android:id="@+id/etToNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="To"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/etMessage"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etToNumber"
        android:hint="text"
        android:inputType="textLongMessage"/>

    <Button
        android:id="@+id/btnSetDate"
        android:layout_below="@+id/etMessage"
        android:text="Set Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btnSetTime"
        android:layout_toRightOf="@+id/btnSetDate"
        android:layout_below="@+id/etMessage"
        android:text="Set Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvSetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSetDate"
        android:text="Date is not Set"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvSetTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSetDate"
        android:text="Time is not Set"
        android:visibility="invisible"/>

